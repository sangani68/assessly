# Azure OpenAI / Foundry Models (chat completions)
AZURE_OPENAI_ENDPOINT=https://YOUR-RESOURCE.openai.azure.com/
AZURE_OPENAI_API_KEY=YOUR_AZURE_OPENAI_KEY
AZURE_OPENAI_DEPLOYMENT=YOUR_DEPLOYMENT_NAME
AZURE_OPENAI_API_VERSION=2024-06-01

# Server
CORS_ORIGINS=http://localhost:8000,http://localhost:5173,http://127.0.0.1:5173

# Public backend base URL (used by frontend)
PUBLIC_BACKEND_URL=http://localhost:8000

# Azure SQL (ODBC connection string)
# Example:
# AZURE_SQL_CONNECTION_STRING=Driver={ODBC Driver 18 for SQL Server};Server=tcp:YOURSERVER.database.windows.net,1433;Database=YOURDB;Uid=YOURUSER;Pwd=YOURPASSWORD;Encrypt=yes;TrustServerCertificate=no;Connection Timeout=30;
AZURE_SQL_CONNECTION_STRING=

# ADLS Gen2 (store chat transcripts)
# Use either connection string OR account_url + credential
ADLS_CONNECTION_STRING=
ADLS_ACCOUNT_URL=
ADLS_CREDENTIAL=
ADLS_CONTAINER_NAME=ai-literacy-assessments
ADLS_BLOB_PREFIX=transcripts

# Azure Speech (used by frontend avatar)
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=

# Simple landing page access control
APP_ACCESS_PASSWORD=
